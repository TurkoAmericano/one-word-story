# Database Configuration (AWS RDS PostgreSQL)
DATABASE_URL=postgresql://USERNAME:PASSWORD@your-rds-endpoint.rds.amazonaws.com:5432/one_word_story

# JWT Configuration
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET
JWT_EXPIRES_IN=7d

# Email Configuration (Optional - for email verification)
# For AWS SES, use your SMTP credentials
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME="One Word Story"

# Frontend URL (update with your domain or EC2 IP)
FRONTEND_URL=http://localhost

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
